{
  "name": "visualdebugger",
  "displayName": "VisualDebugger",
  "description": "A Visual Debugger for C. Shows memory, pointers, and stack and heap data.",
  "version": "0.0.1",
  "type" : "commonjs",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "startVD",
        "title": "Run VD"
      },
      {
        "command": "execute_gdb",
        "title": "Execute GDB"
      },
      {
        "command": "automate_gdb",
        "title": "Automate GDB"
      },
      {
        "command": "DAP_command",
        "title": "DAP Command"
      },
      {
        "command": "visualdebugger.buildWithMemlog",
        "title": "VisualDebugger: Build (compile-time memory analysis)"
      },
      {
        "command": "visualdebugger.openLatestLogFolder",
        "title": "VisualDebugger: Open latest log folder"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "IntroView",
          "title": "Visual Debugger",
          "icon": "cat.svg"
        }
      ]
    },
    "views": {
      "IntroView": [
        {
          "id": "first_panel",
          "name": "Visual Debugger",
          "icon": "cat.svg"
        }
      ]
    },
     "viewsWelcome":[
    {
      "view":"first_panel",
      "contents":"[Execute GDB](command:execute_gdb)"
    },
    {
      "view":"first_panel",
      "contents":"[Automate GDB](command:automate_gdb)"
    }
  ] 
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "vscode": "^1.1.37",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1"
  },
  "dependencies": {
    "debug-tracker-vscode": "^0.0.15",
    "keypress": "^0.2.1"
  }
}
